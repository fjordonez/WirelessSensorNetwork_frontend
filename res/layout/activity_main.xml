<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

    <RelativeLayout
	 	android:orientation="vertical"
	 	android:layout_width="wrap_content"
	 	android:layout_height="wrap_content"
	 	android:layout_marginTop="5dp">
	   	<TextView
			 android:id="@+id/TextView_lista"
			 android:layout_height="wrap_content"
			 android:layout_width="wrap_content"
			 android:text="@string/custom_listview"
			 android:layout_centerHorizontal="true"
			 android:layout_centerVertical="true"
			 android:textAppearance="?android:attr/textAppearanceLarge" />
	   	<ImageView
		     android:id="@+id/ImageView_info"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
			 android:layout_centerVertical="true"
			 android:layout_alignParentRight="true"
		     android:contentDescription="@string/desc_info"
		     android:src="@drawable/help" />
   	</RelativeLayout>
   	
   	<TextView  
	    android:id="@+id/TextView_connected"
	    android:layout_marginTop="10dp"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:text="@string/connection_status" 
		android:gravity="center_vertical|center_horizontal"
	    android:padding="10dp" 
	    android:background="@color/connection_color"/>
	<TextView
		android:id="@+id/TextView_noElements"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal"
		android:layout_marginTop="10dp"
		android:layout_width="fill_parent"
		android:textStyle="bold" />
	 <ListView
		android:id="@android:id/list"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:divider="#b5b5b5"
        android:dividerHeight="1dp"
		android:listSelector="@drawable/list_selector"/>
</LinearLayout>